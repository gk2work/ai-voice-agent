# AI Voice Loan Agent Configuration

# Database
MONGODB_URI=mongodb://localhost:27017/voice_agent

# Twilio Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Webhook URLs (ngrok for development)
WEBHOOK_BASE_URL=https://your-ngrok-url.ngrok-free.app
BASE_URL=https://your-ngrok-url.ngrok-free.app

# OpenAI (Backup)
OPENAI_API_KEY=your_openai_api_key

# Groq (Primary LLM - 90% cheaper)
GROQ_API_KEY=your_groq_api_key
GROQ_MODEL=llama-3.1-8b-instant
USE_GROQ_PRIMARY=true

# Speech Provider Configuration
SPEECH_PROVIDER=sarvam_ai
SARVAM_API_KEY=your_sarvam_api_key
SARVAM_API_URL=https://api.sarvam.ai

# Sarvam AI Model Configuration
SARVAM_TTS_MODEL=bulbul:v2
SARVAM_ASR_MODEL=saaras:v1
SARVAM_VOICE_SPEAKER=anushka

# Security
JWT_SECRET_KEY=your-secure-jwt-secret-key-change-this-in-production
API_KEY=your-webhook-api-key-for-twilio

# Environment
ENVIRONMENT=development

# Logging
LOG_LEVEL=INFO

# Audio Caching
AUDIO_CACHE_ENABLED=true
CLOUD_PROVIDER=local